{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@skillprompt-lms/auth": ["libs/auth/src/index.ts"],
      "@skillprompt-lms/libs/api-contract/*": ["libs/api-contract/src/*"],
      "@skillprompt-lms/libs/lms-prisma/*": ["libs/lms-prisma/src/*"],
      "@skillprompt-lms/libs/todo-feature/*": ["libs/todo-feature/src/*"],
      "@skillprompt-lms/libs/ui-components/*": [
        "libs/ui-components/src/*"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
